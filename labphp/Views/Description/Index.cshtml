@model IEnumerable<AmusementPark.Models.SubscriptionsList>

<h1 class="center">Описание абонементов</h1>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th width="10%">Название</th>
            <th width="10%">Цена взрослого билета</th>
            <th width="10%">Цена детского билета</th>
            <th>Список аттракционов</th>
            <th>Список услуг</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><b>@item.Subscription.Name</b></td>
                <td>@item.Subscription.AdultPrice</td>
                <td>@item.Subscription.ChildPrice</td>
                <td>
                    @foreach (var item1 in item.Attractions)
                    {
                        <p>@item1.Name</p>
                    }
                </td>
                <td>
                    @foreach (var item1 in item.Services)
                    {
                        <p>@item1.Name</p>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<br />

<h1 class="center">Описание аттрационов</h1>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Максимальное количество мест</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item1 in StaticData.Attractions)
        {
            <tr>

                <td width="25%">@item1.Name</td>
                <td>@item1.Description</td>
                <td width="10%">@item1.MaxFreeSeat</td>
            </tr>
        }
    </tbody>
</table>

<br />

<h1 class="center">Описание сервисов</h1>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item1 in StaticData.Services)
        {
            <tr>

                <td width="25%">@item1.Name</td>
                <td>@item1.Description</td>
            </tr>
        }
    </tbody>
</table>