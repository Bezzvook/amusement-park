@model AmusementPark.Models.Client
<p>Вы находись в личном кабинете пользователя <b>@Model.Email</b></p>

<p>Список бронирований:</p>
<table class="table table-striped table-hover table-bordered ctable">
    <thead>
        <tr>
            <th>Дата</th>
            <th>На имя</th>
            <th>Абонемент</th>
            <th>Взрослых билетов</th>
            <th>Детский билетов</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Bookings)
        {
            <tr>
                <td>@item.BookingDate</td>
                <td>@item.FullName</td>
                <td>@item.Subscription.Name</td>
                <td width="5%">@item.AdultTickets</td>
                <td width="5%">@item.ChildTickets</td>
                                <td>
                    <b>@item.Status.DisplayName()</b>
                </td>
                <td>
                    @if (item.Status != Status.Rejected)
                    {
                        <a asp-controller="Booking" asp-action="Reject" asp-route-id="@item.Id" class="btn btn-danger btn-block btn-sm">Отменить</a>
                    }
                    <a asp-controller="Booking" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-block btn-sm">Подробности</a>
                </td>
            </tr>
        }
    </tbody>
</table>